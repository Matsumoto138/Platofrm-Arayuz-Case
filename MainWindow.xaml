<Window x:Class="HafifPlatofrmArayuz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HafifPlatofrmArayuz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- 2 Sütunlu Ana Layout (Sol Sidebar - Sağ İçerik Alanı) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik Alanı -->
        </Grid.ColumnDefinitions>

        <!-- Sol Sidebar -->
        <DockPanel Grid.Column="0" Background="#142143">
            <StackPanel>
                <!-- Uygulama Adı -->
                <TextBlock Text="Hafif Platformlar" Foreground="#D8D7DC" FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="10"/>
                <Border BorderThickness="0.2" BorderBrush="White" />
                <!-- Menü Butonları -->
                <Button Content="Paket Gönder" Click="SendBtn"
                        Background="white" Foreground="Gray" Margin="10" FontSize="14" Height="40"/>
                <!--<Button Content="Testleri Çalıştır" Click="BtnRunTests_Click"
                        Background="#4CAF50" Foreground="White" FontSize="14" Height="40" Margin="10"/>-->
                <Button Content="Logları Göster" Click="ShowLogsBtn"
                        Background="white" Foreground="Gray" Margin="10" FontSize="14" Height="40" />
                <!--<Button Content="Test Raporu Oluştur" Click="BtnGenerateReport_Click"
                        Background="#FF5722" Foreground="White" FontSize="14" Height="40" Margin="10"/>-->
            </StackPanel>
        </DockPanel>

        <!-- Sağ İçerik Alanı -->
        <Grid Grid.Column="1" Background="White" Name="ContentArea">
            <TextBlock Text="Hoş Geldiniz! İşlem yapmak için soldaki menüyü kullanın." 
                       FontSize="16" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>


</Window>
